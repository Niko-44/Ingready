<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ingready.Paginas.Recetas"
             Title="Search"
             Icon="busqueda.png">
    <ContentPage.Content>

        <StackLayout>

            <Entry x:Name="txtNombre"/>
            <Entry x:Name="txtIngrediente"/>
            <Entry x:Name="txtImagen"/>
            
            <Button Text="Cargar datos" x:Name="btnCargar" Clicked="btnCargar_Clicked"/>

            <CollectionView x:Name="cvRecetas">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="Cyan" CornerRadius="20">
                            <StackLayout>
                                <Label Text="{Binding Nombre}"/>
                                <Label Text="{Binding Ingredientes}"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>