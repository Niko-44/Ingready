<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Ingready.Usuario"
             Title="Profile"
             Icon="usuario.png"
             BackgroundColor="#dafbeb "
             >

    <ContentPage.Content>

        <StackLayout Margin="25"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand">
            <StackLayout>
                <ScrollView>
                    <Grid RowDefinitions="100, *">

                        <Frame Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Padding="0"
                                   HeightRequest="160"
                                   VerticalOptions="StartAndExpand"
                                   HorizontalOptions="Center"
                                   WidthRequest="160"
                                   IsClippedToBounds="True"
                                   CornerRadius="100"
                                   BackgroundColor="#a7dcb2"
                                   >
                        </Frame>

                        <Frame Grid.Row="1" WidthRequest="400"
                                   Grid.Column="0"
                                   HorizontalOptions="Center"
                                   CornerRadius="15"
                                   Margin="0,-20,0,0"
                                   HeightRequest="550"
                                   BackgroundColor="#f6df50"
                                   >
                            
                            <!--Gradiente Frame start-->
                            <Frame.Background>
                                <LinearGradientBrush EndPoint="0,1">
                                    <GradientStop Color="#a7dcb2" Offset="0"/>
                                    <GradientStop Color="#3a7658" Offset="50"/>
                                </LinearGradientBrush>
                            </Frame.Background>   
                            <!--Frame Gradient end-->
                            
                            <StackLayout Margin="0,40,0,350">

                                <Label Text="Nombre del Usuario"
                                           TextColor="Black"
                                            FontSize="25"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                       />

                                <Button Text="Crear" CornerRadius="10"
                                            HeightRequest="45"
                                            Background="#dafbeb"
                                            VerticalOptions="End"
                                        x:Name="btnCrear"
                                        />

                                <Button Text="Favoritas" CornerRadius="10"
                                            HeightRequest="45"
                                            Background="#dafbeb"
                                            VerticalOptions="End"/>

                                <Button Text="Tus recetas" CornerRadius="10"
                                            HeightRequest="45"
                                            Background="#dafbeb"
                                            VerticalOptions="End"
                                        Clicked="Button_Clicked"/>

                                <Button Text="Cerrar sesion" CornerRadius="10"
                                            HeightRequest="45"
                                            Background="#dafbeb"
                                            VerticalOptions="End"/>

                            </StackLayout>

                        </Frame>


                        <Frame Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Padding="0"
                                   Margin="13"
                                   HeightRequest="130"
                                   VerticalOptions="StartAndExpand"
                                   HorizontalOptions="Center"
                                   WidthRequest="130"
                                   IsClippedToBounds="True"
                                   CornerRadius="100"
                                   >


                            <Image Source="http://www.dhanwantaricolleges.com/wp-content/uploads/2020/02/flat-faces-icons-circle-man-9.png"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                        </Frame>

                        


                    </Grid>
                </ScrollView>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>